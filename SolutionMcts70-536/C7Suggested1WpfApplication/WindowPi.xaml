<Window x:Class="C7Suggested1WpfApplication.WindowPi"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WindowPi" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="150px"></RowDefinition>
            <RowDefinition Height="100px"></RowDefinition>
        </Grid.RowDefinitions>
        
        <TextBlock Width="250px" FontSize="16" TextWrapping="Wrap" Height="50px" Name="txbPi" Grid.Row="0"></TextBlock>
        
        <Button Name="Start" Content="Start Calculate" Width="100px" Height="30px" Grid.Row="1" HorizontalAlignment="Left" Margin="20,0,0,30" Click="Start_Click"></Button>
        <Button Name="Stop" Content="Stop Calculate" Width="100px" Height="30px" Grid.Row="1" HorizontalAlignment="Right" Margin="0,0,20,30" Click="Stop_Click"></Button>
        <Button Name="Show" Content="Show Calc" Width="100px" Height="30px" Grid.Row="1" HorizontalAlignment="Right" Margin="0,60,90,0" Click="Show_Click"></Button>        
    </Grid>
</Window>
